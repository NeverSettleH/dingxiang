<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_40">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="书架"
            android:textColor="@color/textColor_alert_title"
            android:textSize="20sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_book"
            android:layout_width="@dimen/qb_px_100"
            android:layout_height="@dimen/qb_px_100"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_book_1" />

        <TextView
            android:id="@+id/tv_download_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/image_book"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <Button
        android:id="@+id/btn_event_center"
        android:layout_width="@dimen/qb_px_100"
        android:layout_height="@dimen/qb_px_50"
        android:layout_gravity="center_horizontal"
        android:text="CEventCenter" />

    <Button
        android:id="@+id/btn_web_view"
        android:layout_width="@dimen/qb_px_100"
        android:layout_height="@dimen/qb_px_50"
        android:layout_gravity="center_horizontal"
        android:text="WebView" />

</LinearLayout>